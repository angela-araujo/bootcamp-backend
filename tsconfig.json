{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "allowJs": true, 
    "outDir": "./build", 
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true
  }
}